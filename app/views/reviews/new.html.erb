<h1>Add review</h1>
<strong><%= @restaurant.name %></strong>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: (0..5) %>
  <%= f.submit "Save", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Back to restaurant', restaurant_path(@restaurant) %>
